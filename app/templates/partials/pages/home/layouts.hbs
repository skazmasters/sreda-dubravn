<div class="section">
  <section class="home-layouts">
    <h2 class="home-layouts__title">Планировки</h2>
    <div class="home-layouts__bg">
      {{>components/image img="home/layouts/bg" ext="jpg"}}
    </div>

    <div class="home-layouts__content">
      <div class="gallery-section js-slider-gallery">
        <div class="gallery-section__slider swiper-container js-slider-gallery__slider">
          <div class="gallery-section__grid swiper-wrapper js-slider-gallery__gallery">
            {{>widgets/gallery-item img="-1" data-size="1280x1031" caption="-1 Этаж" mode="gallery-section__item swiper-slide"}}
            {{>widgets/gallery-item img="1" data-size="1280x984" caption="1 Этаж" mode="gallery-section__item swiper-slide"}}
            {{>widgets/gallery-item img="2" data-size="1280x1012" caption="2 Этаж" mode="gallery-section__item swiper-slide"}}
            {{>widgets/gallery-item img="3" data-size="1280x1014" caption="3 Этаж" mode="gallery-section__item swiper-slide"}}
          </div>
        </div>
        <div class="gallery-section__nav">
          {{>components/slider-nav nav-mode="center" class="js-slider-gallery"}}
        </div>
      </div>
    </div>
  </section>
</div>
